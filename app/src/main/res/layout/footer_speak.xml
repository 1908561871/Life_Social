<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
   style="@style/base_style_mw">

    <RelativeLayout
        style="@style/base_style_mw">
    <ImageView
        android:id="@+id/iv_face"
        style="@style/base_style_ww"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_face_normal"
        />
    <ImageView
        android:id="@+id/iv_picture"
        style="@style/base_style_ww"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/iv_face"
        android:src="@drawable/icon_more_nor"
        />
    <Button
        android:id="@+id/bt_send_msg"
        style="@style/sml_text_style_ww"
        android:layout_margin="10dp"
        android:text="@string/send"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:textColor="@color/white"
        android:layout_centerVertical="true"
        android:background="@drawable/btn_chat_send"
        android:layout_alignParentRight="true"/>

    <EditText
        android:id="@+id/et_content"
        android:layout_toRightOf="@id/iv_picture"
        android:layout_toLeftOf="@id/bt_send_msg"
        style="@style/base_style_mw"
        android:layout_centerVertical="true"

        android:background="@android:color/white"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black" />
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/fl_tool"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="200dp"></FrameLayout>
</LinearLayout>


